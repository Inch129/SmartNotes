<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="200dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">


        <ImageButton
            android:id="@+id/btn_item_delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="16dp"
            android:background="@drawable/ic_close_black_24dp"
            android:text="@string/delete" />


        <TextView
            android:id="@+id/header_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBottom="@+id/btn_item_delete"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:text="@string/header" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <Button
            android:id="@+id/btn_item_edit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="#f59c00"
            android:text="@string/edit"
            android:textColor="@color/white"
            android:layout_alignBaseline="@+id/btn_share"
            android:layout_alignBottom="@+id/btn_share"
            android:layout_alignRight="@+id/btn_item_delete"
            android:layout_alignEnd="@+id/btn_item_delete" />

        <Button
            android:id="@+id/btn_share"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:background="#f59c00"
            android:text="Поделиться"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/header_item"
            android:layout_alignStart="@+id/header_item" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
